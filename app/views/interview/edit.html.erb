    html_new_question += "<select name=\"interview[questions]["+ question_id +"][question_type]\" class=\"btn\">"
    html_new_question +=    "<option value=\"multil\">Multil Choice </option>"
    html_new_question +=    "<option value=\"exact\">Exact answer </option>"
